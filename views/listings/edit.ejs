<% layout("/layouts/boilerplate.ejs") %>
<body>
      <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3> Edit details </h3>
            <br>
            <form  enctype="multipart/form-data" method="POST" action="/listings/<%=listing._id%>?_method=PUT"  novalidate class="needs-validation" >
                <div class="mb-3">
                    <label for="title" class="form-label" >Title</label> 
                    <input type="text" name="title" value="<%=listing.title%>"  class="form-control" required>
                    <div class="invalid-feedback"> give a title</div>
                    <div class="valid-feedback">looks good</div>
                </div>
               <div class="mb-3">
                    <label for="description" class="form-label" >Description</label> 
                    <textarea  name="description"  class="form-control" required > <%=listing.description%></textarea>
                    <div class="invalid-feedback"> give a description</div>
               </div>
               
               <div class="mb-3">
                    Previous Uploaded Image
                    <img src="<%=originalImageUrl%>" class="card-img-top show-img" alt="...">
                </div >

                <div class="mb-3">
                    <label for="image" class="form-label" >Upload new Image</label>
                    <input type="file" name="listing[image]"  class="form-control" >
                </div >
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="price" class="form-label" >Price</label> 
                        <input type="number" name="price" value="<%=listing.price%>" class="form-control" required>
                        <div class="invalid-feedback"> give a price</div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label" >Country</label> 
                        <input type="text" name="country" value="<%=listing.country%>" class="form-control" required>
                        <div class="invalid-feedback"> giv a country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label" >Location</label> 
                    <input type="text" name="location" value="<%=listing.location%>" class="form-control" required>
                    <div class="invalid-feedback"> give a location</div>
        
                </div>
                
        
                <button class=" btn btn-dark edit-btn mt-3 mb-3">CONFIRM</button>
            </form>
        </div>    
      </div>
    
      <script src="/js/script.js"></script>
</body>
